class Solution {
    public int[][] flipAndInvertImage(int[][] A) {
        int row = A.length;
        int column = A[0].length;
        int res[][] = new int[row][column];
        for (int i = 0; i < row; i++) {
            for (int j = 0; j < column; j++) {
                res[i][j] = A[i][column-j-1] == 1 ? 0 : 1;
            }
        }
        return res;
    }
}